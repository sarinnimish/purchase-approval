<odoo>

    <record id="action_purchase_refuse_wizard" model="ir.actions.act_window">
        <field name="name">Refuse Purchase Order</field>
        <field name="res_model">purchase.refuse.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="view_purchase_refuse_wizard_form" model="ir.ui.view">
        <field name="name">purchase.refuse.wizard.form</field>
        <field name="model">purchase.refuse.wizard</field>
        <field name="arch" type="xml">
            <form string="Refuse Purchase Order">
                <group>
                    <field name="refuse_reason" placeholder="Enter the reason for refusal"/>
                </group>
                <footer>
                    <button string="Refuse" type="object" name="refuse_approval" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>