<odoo>
    <data>
        <record id="email_template_purchase_manager_notification" model="mail.template">
            <field name="name">PO Approve Email Template</field>
            <field name="model_id" ref="purchase.model_purchase_order"/>
            <field name="subject">Purchase Order Requires Approval</field>
            <field name="email_from">{{(user.email)}}</field>
            <field name="email_to">nimish.21bcon478@jecrcu.edu.in</field>
            <field name="body_html">
                <![CDATA[
                <p>Dear,</p>
                <p>The purchase order "<t t-out="object.name"/>" requires your approval as its total amount is "<t t-out="object.amount_total"/>".</p>
                <p>Thank you.</p>
                ]]>
            </field>
        </record>

