            <field name="email_from">{{(user.email)}}</field>
            <field name="email_to">nimish.21bcon478@jecrcu.edu.in</field>
            <field name="body_html">
                <![CDATA[
                <p>Dear Purchase Manager,</p>
                <p>Your purchase order "<t t-out="object.name"/>" is refused.</p>
                <p>Thank you.</p>
                ]]>
            </field>
        </record>
    </data>
</odoo>