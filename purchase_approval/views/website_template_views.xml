<odoo>
    <template id="custom_items_before_billing" inherit_id="website_sale.billing_address_row">
        <xpath expr="//div[@id='billing_address_row']/h4" position="before">
            <div class="col-12 mt-4">
                <t t-if="website_sale_order and website_sale_order.website_order_line">
                    <h5 class="mb-3">Items in your order</h5>
                    <ul class="list-group">
                        <li t-foreach="website_sale_order.website_order_line" t-as="line"
                            class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong><t t-out="line.product_id.display_name"/></strong> -
                                <t t-out="line.product_uom_qty"/> pcs
                            </div>
                        </li>
                    </ul>
                </t>
            </div>
        </xpath>
    </template>
</odoo>
